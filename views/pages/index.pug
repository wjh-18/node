extends ../layout

block content
    .container
        .row
            each item in movies
                .col-md-2
                    .thumbnail
                        a(href="/movie/"+item._id, title=item.title)
                            img(src=item.poster, alt=item.title)
                        .caption
                            h3 #{item.title}
                            p: a.btn.btn-primary(href="/movie/"+item._id, role='button') watch